#!/usr/bin/env python3

import os
import sys
from src import help 
from src import version
from src import new 
from src import build 
from src import run 
from src import clean 
from src import add 
from src import scripts 
from src import util 


def main(args):
    if len(args) == 0:
        print("Invalid arguments")
        return
    if scripts(args):
        return
    if args[0] == "--help" or args[0] == "-h":
        help()
    elif args[0] == "--version" or args[0] == "-v":
        version()
    elif args[0] == "new":
        new(args[1:])
    elif args[0] == "build":
        build(args[1:])
    elif args[0] == "run":
        run(args[1:])
    elif args[0] == "clean":
        clean(args[1:])
    elif args[0] == "add":
        add(args[1:])
    else:
        print("Invalid arguments")


if __name__ == "__main__":
    main(sys.argv[1:])
